@using Archetypical.Software.SchemaRegistry.Shared.Enums
@model List<Archetypical.Software.SchemaRegistry.Shared.Models.SchemaGroup>
@{ ViewData["Title"] = "Schemas"; }

<div class="flex flex-col">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
            <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Name
                            </th>
                            <th scope="col" class="relative px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Description
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Properties
                            </th>

                            <th scope="col" class="px-6 py-3">
                                <span class="sr-only">Edit</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var schemaGroup in Model)
                        {

                            var icon = "";
                            var friendly = "";
                            switch (schemaGroup.Format)
                            {
                                case Format.JsonSchema:
                                    icon = "json";
                                    friendly = "JSON Schema";
                                    break;
                                case Format.Avro:
                                    icon = "avro";
                                    friendly = "AVRO Schema";
                                    break;
                                case Format.XSD:
                                    friendly = "XML Schema";
                                    icon = "xml";
                                    break;
                                case Format.Proto2:
                                    break;
                                case Format.Proto3:
                                    friendly = "Protocol buffer definitions";
                                    icon = "protobuf";
                                    break;
                                case Format.WSDL:
                                    break;
                                case Format.OpenApi:
                                    friendly = "OpenAPI Specification";
                                    icon = "aai";
                                    break;
                                case null:
                                    break;
                                default:
                                    throw new ArgumentOutOfRangeException();
                            }

                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <div class="h-10 w-10 rounded-full @icon-icon24" src="" alt=""></div>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-gray-900">
                                                @schemaGroup.Id
                                            </div>
                                            <div class="text-sm text-gray-500">
                                                A group of @friendly
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">@schemaGroup.Description</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @foreach (var kvp in schemaGroup.GroupProperties)
                                    {
                                        <div class="text-sm text-gray-900">@kvp.Key:@kvp.Value</div>
                                    }
                                </td>

                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <a href="#" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                                </td>
                            </tr>

                        }
                        <!-- More items... -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>